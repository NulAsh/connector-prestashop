{
  "name": "jtl/connector-prestashop",
  "type": "app",
  "description": "PrestaShop Connector",
  "keywords": [
    "jtl",
    "Connector"
  ],
  "homepage": "http://www.jtl-software.de",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "JTL Software GmbH",
      "email": "info@jtl-software.de",
      "homepage": "http://www.jtl-software.de",
      "role": "Founder"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "platform": {
      "php": "7.1.3"
    },
    "vendor-dir": "lib"
  },
  "require": {
    "php": ">=7.1.3",
    "jtl/connector": "^3.2.0",
    "symfony/yaml": "^3.4",
    "ext-json": "*",
    "phing/phing": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "jtl\\Connector\\Presta\\": "src/",
      "Tests\\": "tests/"
    },
    "psr-0": {
      "": "plugins/"
    }
  },
  "require-dev": {
    "jtl/connector-integration-tests": "dev-develop",
    "friendsofphp/php-cs-fixer": "^2.16",
    "symfony/polyfill-php80": "<=1.18.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpcompatibility/php-compatibility": "dev-develop"
  },
  "scripts": {
    "build": [
      "@composer update",
      "./lib/bin/phpcs src/ --extensions=php -p --standard=phpcs.xml.dist",
      "@composer update --no-dev",
      "php ./lib/bin/phing release",
      "@composer update"
    ]
  }
}
